            android:text="正常"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_horizontal"/>

        <TextView
            android:id="@+id/txt_main_CAN"
            android:text="正常"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_horizontal"/>

    </LinearLayout>





